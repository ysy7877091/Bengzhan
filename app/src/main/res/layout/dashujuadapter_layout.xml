<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



            <TextView
                android:id="@+id/tv_shiJian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@mipmap/yuanjiao_juxing"
                android:gravity="center"
                android:text="2016/12/12"
                android:textColor="#000000"
                android:textSize="12sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chang_xian" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_yyht"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/yuanjiao_juxing"
                android:gravity="center"
                android:text="一氧化碳"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chang_xian" />

            <TextView
                android:id="@+id/tv_liuHuaQing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/yuanjiao_juxing"
                android:gravity="center"
                android:text="硫化氢"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chang_xian" />

            <TextView
                android:id="@+id/tv_jiaWan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/yuanjiao_juxing"
                android:gravity="center"
                android:text="甲烷"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chang_xian" />

            <TextView
                android:id="@+id/tv_anQi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/yuanjiao_juxing"
                android:gravity="center"
                android:text="氨气"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chang_xian" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:id="@+id/tv_yuliang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/yuanjiao_juxing"
                android:gravity="center"
                android:text="雨量"
                android:textColor="#000000"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
