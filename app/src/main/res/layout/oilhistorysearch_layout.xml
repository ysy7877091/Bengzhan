<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号"
            android:textSize="@dimen/x16"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择车牌号"
            android:textSize="@dimen/x16"
            android:layout_alignParentRight="true"
            android:id="@+id/OilHistory_carNum"
            android:background="@null"
            android:gravity="right"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/hengline"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/time_rl"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="开始时间"
            android:textSize="@dimen/x16"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="结束时间"
            android:textSize="@dimen/x16"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/hengline"
        android:id="@+id/fenge_rl"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/rl_ll"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="日期"
            android:textSize="@dimen/x16"
            android:id="@+id/Oil_Start_timeHour"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textSize="@dimen/x13"
            android:textColor="@color/huise"
            android:layout_centerInParent="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textSize="@dimen/x16"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:id="@+id/Oil_End_TimeHour"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/hengline"/>
    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Oil_chaxun"
        android:src="@mipmap/bd_chaxun"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

</LinearLayout>
